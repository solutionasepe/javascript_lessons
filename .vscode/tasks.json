{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "run JS file",
        "type": "shell",
        "command": "node",
        "args": [
          "${file}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared"
        },
        "problemMatcher": []
      }
    ]
  }